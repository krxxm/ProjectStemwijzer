      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Stemwijzer"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="300" Background="#8D99AE" MaxHeight="300" MaxWidth="350"
      Title="ir">

    <Grid>
        <TextBlock FontSize="25" TextAlignment="Center">Inloggen of Registreren</TextBlock>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="15"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="15"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Height="30" BorderBrush="Black" Background="#2B2D42" Foreground="White" Grid.Column="1" >Inloggen</Button>
            <Button Height="30" BorderBrush="Black" Background="#2B2D42" Foreground="White" Grid.Column="3">Registreren</Button>
        </Grid>
    </Grid>
</Page>
