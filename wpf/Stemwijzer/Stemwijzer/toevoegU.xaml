<Window x:Class="Stemwijzer.toevoegU"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stemwijzer"
        mc:Ignorable="d"
        Title="toevoegU" Height="450" Width="800">
    <Grid>
        <Grid x:Name="WachtwoordText">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Viewbox>
                <TextBlock Margin="10"> Gebruikers toevoegen</TextBlock>
            </Viewbox>
            <TextBox x:Name="naamtxt" Grid.Row="1" Grid.Column="1" Height="30"  VerticalAlignment="Bottom" Text="Naam"></TextBox>
            <TextBlock Grid.Row="2" Grid.Column="1">Wachtwoord:</TextBlock>
            <PasswordBox x:Name="wachtwoordtxt" Grid.Row="2" Grid.Column="1" Height="30"  VerticalAlignment="Center" ></PasswordBox>
            <TextBox x:Name="mailText" Grid.Row="3" Grid.Column="1" Height="30"  VerticalAlignment="Center" Text="E-mail"></TextBox>
            <ComboBox x:Name="adminbox" Grid.Row="4" Grid.Column="1" Height="30"  VerticalAlignment="Top" Text="Role">
                <ComboBoxItem Content="admin" />
                <ComboBoxItem Content="user" />
                <ComboBoxItem Content="visitor" />
            </ComboBox>
            <Grid Grid.Row="6" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="20"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    
                </Grid.RowDefinitions>
                <Button x:Name="uvoegbtn" Grid.Row="1" Grid.Column="1" Background="Black" Foreground="White" Click="uvoegbtn_Click">Toevoegen</Button>
            </Grid>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
        </Grid>

    </Grid>
</Window>
